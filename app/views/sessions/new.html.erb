<%= form_for(:session, url: sessions_path) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "enter your email ... " %> <br><br>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "and your secret ... " %> <br><br>

  <%= f.submit "Login", class: "btn btn-primary" %>

<% end %>