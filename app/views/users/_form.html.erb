<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "tell us your name ... " %> </br>

  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "what's your email ... " %> </br>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "something secret ... " %> </br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "same secret ... " %> </br>

  <%= f.submit class: "btn btn-register" %>

<% end %>