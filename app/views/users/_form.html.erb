<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "tell us your name ... " %> <br><br>

  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "what's your email ... " %> <br><br>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "something secret ... " %> <br><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, placeholder: "same secret ... " %> <br><br>

  <%= f.submit class: "btn" %>

<% end %>