<%=h @item.name %>
<% if @item.flag == false  %>
    <% ad_builder(@item.name)%>
  <% @amazon_list[0..9].each do |t| %>
      <div>
    <img src="<%= t['pic']%>" >
    <%= link_to t['title'], t['url'].to_s %>
    <%= t['price']%>
      </div>
  <%end%>
<%end%>


<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
